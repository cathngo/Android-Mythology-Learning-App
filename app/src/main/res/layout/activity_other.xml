<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:openDrawer="start"
    tools:context=".LearnActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/otherLearnCV"
            android:layout_width="313dp"
            android:layout_height="127dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.25">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/otherLearnPic"
                    android:layout_width="251dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/thor" />

                <TextView
                    android:id="@+id/otherLearnTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roman"
                    android:text="Learn"
                    app:layout_constraintEnd_toEndOf="@+id/otherLearnPic"
                    app:layout_constraintStart_toStartOf="@+id/otherLearnPic"
                    app:layout_constraintTop_toBottomOf="@+id/otherLearnPic" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/otherQuizCV"
            android:layout_width="313dp"
            android:layout_height="127dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherLearnCV"
            app:layout_constraintVertical_bias="0.11">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/otherQuizPic"
                    android:layout_width="251dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/brain" />

                <TextView
                    android:id="@+id/otherQuizTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roman"
                    android:text="Quiz"
                    app:layout_constraintEnd_toEndOf="@+id/otherQuizPic"
                    app:layout_constraintStart_toStartOf="@+id/otherQuizPic"
                    app:layout_constraintTop_toBottomOf="@+id/otherQuizPic" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/otherNotesCV"
            android:layout_width="313dp"
            android:layout_height="127dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherQuizCV"
            app:layout_constraintVertical_bias="0.216">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/otherNotesPic"
                    android:layout_width="251dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/post_it" />

                <TextView
                    android:id="@+id/otherNotesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roman"
                    android:text="Notes"
                    app:layout_constraintEnd_toEndOf="@+id/otherNotesPic"
                    app:layout_constraintStart_toStartOf="@+id/otherNotesPic"
                    app:layout_constraintTop_toBottomOf="@+id/otherNotesPic" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Learn"
            app:titleTextColor="@color/black" />

        <TextView
            android:id="@+id/otherTitle"
            android:layout_width="221dp"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roman"
            android:gravity="center|center_horizontal"
            android:text="OTHER"
            android:textSize="54sp"
            app:layout_constraintBottom_toTopOf="@+id/otherLearnCV"
            app:layout_constraintEnd_toEndOf="@+id/otherLearnCV"
            app:layout_constraintStart_toStartOf="@+id/otherLearnCV"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navmenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/iconmenu"
        tools:visibility="gone">

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>